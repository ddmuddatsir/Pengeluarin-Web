generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Transaction {
  id         Int      @id @default(autoincrement())
  amount     Float
  date       DateTime
  description String
  category   Category
}

enum Category {
  BELANJA
  BISNIS
  KERANJANG
  KESEHATAN
  LAINNYA
  SEKOLAH
  LANGGANAN
  TAGIHAN
  HIBURAN
  MAKANAN
  RUMAH
  HADIAH
}